<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, 
        initial-scale=1.0">
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Blog</title>
    </head>
    <body>
        <div class="card text-center">
            <form action="register" method="POST">
                <div class="card-header">
                    <h4 class="text-center">Register</h4>
                </div>
                <div class="card-body">
                    <div>
                        <label class="text-center">User Name</label>
                        <input class="text-center" type="text" name="username"/>
                    </div>
                    <div>
                        <label class="text-center">E-Mail</label>
                        <input class="text-center" type="text" name="email"/>
                    </div>
                    <div>
                        <label class="text-center">Password</label>
                        <input class="text-center" type="password" name="password"/>
                    </div>
                    <div>
                        <% if(locals.errors) { %>
                            <ul>
                            <% Object.values(errors).forEach( (error) => { %>
                                <li style="color: red;">
                                    <%= error.msg %>
                                </li> 
                                <% }); %>
                            </ul>
                        <% } %>
                    </div>
                </div>
                <div class="card-footer">
                    <input class="text-center" type="submit" class="btn btn-primary"/>
                    OR
                    <a class="text-center" class="btn btn-primary" href="./../user/loginpage">
                        LogIn
                    </a>
                </div>
            </form>
        </div>
    </body>
</html>